---
import Button from './Button.astro';

interface Props{
  title: string;
  description: string;
  href: string;
}

const { title, description, href } = Astro.props
---
<article class="border border-white/40 px-4 py-2 group hover:cursor-pointer hover:shadow-sm hover:shadow-white/50 select-none rounded-sm flex flex-col gap-4 transition duration-300">
  <h2 class="text-2xl group-hover:text-blue-500 transition duration-300">{title}</h2>
  <p class="overflow-hidden text-wrap text-ellipsis">{description}</p>
  <Button title='Usar' href={href}/>
</article>